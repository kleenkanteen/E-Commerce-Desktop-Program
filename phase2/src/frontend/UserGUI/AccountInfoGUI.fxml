         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding></Label>
      <Button fx:id="tradeHistory" mnemonicParsing="false" onAction="#viewTradeHistory" prefWidth="300.0" text="View your trade history">
