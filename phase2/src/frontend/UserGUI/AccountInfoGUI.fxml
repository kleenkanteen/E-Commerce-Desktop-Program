      <Button fx:id="exit" mnemonicParsing="false" onAction="#returnToMainMenu" text="Return to main menu">
         <VBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </VBox.margin>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
