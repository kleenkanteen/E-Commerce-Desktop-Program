         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding></Button>
      <Button fx:id="tradePartners" mnemonicParsing="false" onAction="#viewTradePartners" prefWidth="300.0" text="View your three most frequent Trading Partners">
         <VBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </VBox.margin>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding></Button>
      <Button fx:id="recentTrades" mnemonicParsing="false" onAction="#viewRecentTrades" prefWidth="300.0" text="View your three most recent trades">
